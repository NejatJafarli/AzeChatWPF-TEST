<UserControl x:Class="AzeChat.MyUserMessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AzeChat"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">
    <Border x:Name="MainBorder" Background="#EB2260" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1.3*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 5 0" FontSize="8" FontWeight="Bold" Foreground="Black" Name="TimeText"></TextBlock>
            <TextBlock Name="DataText" TextWrapping="Wrap" Foreground="White" FontSize="7" MaxWidth="100" Margin="3 3 0 0"></TextBlock>
        </Grid>
    </Border>
</UserControl>
